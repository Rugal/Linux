#alias mv='mv -i'

# Source global definitions

PS1="[\[\e[0;36m\]\u@\h\[\e[m\] \[\e[0;35m\]\W\[\e[m\]]> "

alias c="clear"
alias ll="ls --color=auto --time=ctime --sort=time  --time-style=iso -lFhp"
alias l="ls --color=auto -p"
alias cl="clear;ll;pwd"
alias lc=cl
alias df="df -h"
alias free="free -m"
alias ccd="cd .."
alias cdd="cd -"
alias dstat="dstat -cdlmnpsy"
alias slurm="slurm -i wlan0"
alias t="translate"
alias ps="ps -ef|grep"
alias v="vim"
alias V="v"
alias g="gvim"
alias matrix="cmatrix -sb"
alias lock-up="gnome-screensaver-command --lock"
alias jekyll="jekyll serve -w -s ~/Workspace/Study/rugal.github.com  -d ~/Workspace/Study/rugal.github.com/_site --limit_posts 6  1>/var/log/jekyll.log 2>&1  &"
alias maven="mvn tomcat:undeploy ; sudo service tomcat7 restart ;mvn clean tomcat:deploy"

git config --global alias.lg "log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --"

bind '"\e[A": history-search-backward'
bind '"\e[B": history-search-forward'
